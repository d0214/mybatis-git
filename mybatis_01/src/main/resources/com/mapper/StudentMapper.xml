<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aaa.dc.mapper.StudentMapper">
    <select id="getStudent" resultType="com.aaa.dc.model.student">
    select * from student
  </select>

    <select id="getStudentByID" parameterType="int" resultType="com.aaa.dc.model.student">
        select *from student where id = #{id}
    </select>

    <insert id="addStudent" parameterType="com.aaa.dc.model.student" >
        insert into student (id,name,age,address) value (#{id},#{name},#{age},#{address})
    </insert>

    <insert id="addStudent2" parameterType="map">
        insert into student (id,name,age,address) value (#{id},#{name},#{age},#{address})
    </insert>

    <update id="updateStudentByID" parameterType="com.aaa.dc.model.student" >
        update student set name=#{name},age=#{age},address=#{address} where id=#{id}
    </update>

    <delete id="deleteStudent" parameterType="int">
        delete from student where id=#{id}
    </delete>

</mapper>